<div id="{{device.id}}" class="tile text-shadow" data-role="tile">
    <div class="tile-content">
        <span class="tile-label">{{device.name}}</span>
        <div id="details_{{device.id}}" style="margin-top:10px;margin-left:15px">
            <div class="" style="text-align: center;width:50px;float:left;">
                <div class="mif-lines mif-2x"></div>Motion: <span class="motion"></span>
            </div>
            <div class="" style="text-align: center;left:0; width:50px;float:left;">
                <div class="mif-thermometer mif-2x"></div><span class="temperature"></span>Â°F
            </div>
            <div class="" style="text-align: center;width:50px;float:left;">
                <div class="mif-battery-two mif-2x"></div><span class="battery"></span>%
            </div>
        </div>
    </div>
